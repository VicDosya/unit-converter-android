<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App Title Styling -->
    <style name="app_heading_style" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Card Title Styling -->
    <style name="card_title_style" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Conversion data textViews -->
    <style name="conversion_textViews" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>